<h1>Listing Pages</h1>
 
<%= link_to 'Add Page', new_page_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th></th>
  </tr>
 
  <% @pages.each do |page| %>
    <tr>
      <td><%= page.title %></td>
      <td><%= page.date %></td>
      <td><%= link_to 'Show', page_path(page) %></td>
      <td><%= link_to 'Edit', edit_page_path(page) %></td>
      <td><%= link_to 'Destroy', page_path(page),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
